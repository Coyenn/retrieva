{
  "name": "retrieva",
  "version": "0.0.3",
  "description": "On-demand component retrieval for TypeScript projects",
  "files": [
    "!lib/tests/**/*",
    "lib/**/*",
    "bin/**/*"
  ],
  "bin": {
    "retrieva": "bin/index.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./lib/",
    "lint": "eslint ./src/ --fix",
    "start": "TS_NODE_FILES=true ts-node ./src/cli.ts",
    "typecheck": "tsc --noEmit"
  },
  "license": "MIT",
  "author": {
    "name": "Tim Ritter",
    "email": "coyenn@users.noreply.github.com",
    "url": "https://github.com/coyenn"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "cli",
    "typescript",
    "components"
  ],
  "dependencies": {
    "commander": "^11.1.0",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "chalk": "^5.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
